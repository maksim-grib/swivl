{% macro paginator(current, count, limit, route) %}
    {% set pages = (count / limit) | round(0, 'ceil') %}
    <div class="pager">
        {% for page in range(1, pages) %}
            <a href="{{ path(route, {page: page}) }}"{% if current == page %} class="active"{% endif %}>
                {{ page }}
            </a>
        {% endfor %}
    </div>
{% endmacro %}